<Defs>

  <PawnKindDef ParentName="BS_MedievalMilitaryBase" Name="BS_Crossbowman">
    <defName>BS_Crossbowman</defName>
    <label>crossbowman</label>
    <combatPower>120</combatPower>
    <gearHealthRange>0.8~1.8</gearHealthRange>
    <apparelMoney>600~1200</apparelMoney>	
    <apparelTags>
      <li>MedievalMilitary</li>
      <li>MedievalArmorDecent</li>
