    <iconPath>Xenotypes/BS_Hearthguardian</iconPath>
    <inheritable>true</inheritable>

    <nameMaker>BS_NamerRobot</nameMaker>
    <combatPowerFactor>3</combatPowerFactor>
    <chanceToUseNameMaker>1.0</chanceToUseNameMaker>
    <genes>
			<li>Ageless</li>
			<li>BS_TrulyAgeless</li>
